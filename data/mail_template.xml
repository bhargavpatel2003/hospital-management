<odoo>
    <data noupdate="0">
        <record id="mail_template_send_student" model="mail.template">
            <field name="name">data send for verification</field>
            <field name="model_id" ref="school_management.model_school_student"/>
            <field name="subject">plases check and verify your detal</field>
            <field name="email_from">support@yourcompany.com</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-out="object.name or ''"/>,<br/><br/>
                        <br/>
                        
                        Age<span style="font-weight:bold;" t-out="object.age or ''"/><br/>
                        Date of Birth<span style="font-weight:bold;" t-out="object.dob or ''"/><br/>
                        Standard: <span style="font-weight:bold;" t-out="object.std or ''"/> <br/>
                        <br/>
                       
                        Thanks &amp; Regards
                        <br/><br/>
                        J J MEHTA SCHOOL
                    </p>
                </div>
            </field>
            <!-- <field name="report_template" ref="account.account_invoices"/> 
            <field name="report_name">Report_{object.name}</field> -->
        </record>
    </data>
