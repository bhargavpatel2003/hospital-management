<odoo>
    <data>
        <record id="view_delevery_inh" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.custom.action</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//header" position="inside">
                    
                    <button name="open_delevery"
                            string="dlv Line"
                            type="object"
                            class="btn-primary"
                             attrs="{'invisible':[('picking_type_code','!=','outgoing')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
