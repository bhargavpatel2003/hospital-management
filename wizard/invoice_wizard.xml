<odoo>
  
  <record id="view_invoice_wizard_form" model="ir.ui.view">
    <field name="name">invoice.wizard.form</field>
    <field name="model">invoice.wizard</field>
    <field name="arch" type="xml">
      <form string="Invoice Wizard">
        <group>
          <field name="partner_id"/>
        </group>
        <notebook>
          <page string="Invoice Lines">
            <field name="inv_line_ids">
              <tree editable="bottom">
                <field name="product_id"/>
                <field name="description"/>
                <field name="product_qty"/>
                <field name="price_unit"/>
                <field name="tax_ids" widget="many2many_tags"/>
                <field name="subtotal" readonly="1"/>
              </tree>
            </field>
          </page>
        </notebook>
        <footer>
          <button name="get_inv_sum" type="object" string="get in sum" class="btn-primary"/>
          <!-- <button string="Cancel" class="btn-secondary" special="cancel"/> -->
        </footer>
      </form>
    </field>
  </record>

  
  <record id="view_invoice_wizard_line_tree" model="ir.ui.view">
    <field name="name">invoice.wizard.line.tree</field>
    <field name="model">invoice.wizard.line</field>
    <field name="arch" type="xml">
      <tree editable="bottom">
        <field name="product_id"/>
        <field name="description"/>
        <field name="product_qty"/>
        <field name="price_unit"/>
        <field name="tax_ids" widget="many2many_tags"/>
        <field name="subtotal" readonly="1"/>
      </tree>
    </field>
  </record>

  
  <record id="action_invoice_wizard" model="ir.actions.act_window">
    <field name="name">Invoice Wizard</field>
    <field name="res_model">invoice.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  
</odoo>
