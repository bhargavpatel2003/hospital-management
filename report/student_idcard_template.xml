<odoo>
    <template id="report_student_idcard">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="student">
                <div class="id-card" style="width:300px; height:300px; border:2px solid #000; margin:10px; padding:10px; text-align:center; float:center;">
                   
                    <div>
                        <img t-if="student.image" t-att-src="'data:image/png;base64,%s' % student.image.decode()" style="width:80px; height:80px; border-radius:50%;"/>
                    </div>
                    
                    <h3><t t-esc="student.name"/></h3>
                    <p><b>Roll No:</b> <t t-esc="student.name"/></p>
                    <p><b>Email:</b> <t t-esc="student.email"/></p>
                    <p><b>DOB:</b> <t t-esc="student.dob"/></p>
                    
                </div>
            </t>
        </t>
    </template>
</odoo>
